@{
    ViewBag.Title = "Admin/Index/Product";
}
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="col-md-6">
            <div class="card mb-4">
                <h5 class="card-header">Add your Product</h5>
                <div class="card-body">
                    <div class="mb-3 row">
                        <label for="html5-text-input" class="col-md-2 col-form-label">Name:</label>
                        <div class="col-md-10">
                            <input class="form-control" type="text" id="html5-text-input" />
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label for="html5-number-input" class="col-md-2 col-form-label">Price:</label>
                        <div class="col-md-10">
                            <input class="form-control" type="number" id="html5-number-input" />
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="html5-text-input" class="col-md-2 col-form-label">Description:</label>
                        <div class="col-md-10">
                            <input class="form-control" type="text" id="html5-text-input" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="formFileMultiple" class="form-label">Your Product Images:</label>
                        <input class="form-control" type="file" id="formFileMultiple" multiple />
                    </div>
                    <div class="btn-group">
                        <button type="button"
                                class="btn btn-primary dropdown-toggle"
                                data-bs-toggle="dropdown"
                                aria-expanded="false">
                            Category
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="javascript:void(0);">Camping Tents</a></li>
                            <li><a class="dropdown-item" href="javascript:void(0);">Sleeping Bags</a></li>
                            <li><a class="dropdown-item" href="javascript:void(0);">Camping Tools</a></li>
                            <li><a class="dropdown-item" href="javascript:void(0);">Emergency Preparedness</a></li>
                            <li><a class="dropdown-item" href="javascript:void(0);">Outdoor Electrical</a></li>
                            <li><a class="dropdown-item" href="javascript:void(0);">Flashlights & Lanterns</a></li>
                            <li><a class="dropdown-item" href="javascript:void(0);">Wagons & Carts</a></li>


                        </ul>
                    </div>
                    <button style="float: right" type="button" class="btn btn-success ">Create</button>

                </div>
            </div>
        </div>
    </div>
</div>