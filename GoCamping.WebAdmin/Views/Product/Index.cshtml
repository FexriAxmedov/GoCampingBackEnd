@{ 
    ViewBag.Title = "Admin/ProductList";
}
@model IEnumerable<GoCamping.DAL.Dtos.ProductDto>


<div class="card">
    <h5 class="card-header">Product Table</h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Image</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td><strong>@product.Name</strong></td>
                        <td><img src="~/@product.Img" style="width: 60px;" alt=""></td>
                        <td>
                            <p style="font-size: 9px;">@product.Description</p>
                        </td>
                        <td>@product.Price</td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div style="z-index: 10;" class="dropdown-menu">
                                    <a asp-route-id="@product.Id" asp-action="Update" class="dropdown-item"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    <a asp-route-id="@product.Id" asp-action="Delete" class="dropdown-item"><i class="bx bx-trash me-1"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>