@{
    ViewBag.Title = "Admin/ContactList";
}
@model IEnumerable<GoCamping.DAL.Dtos.ContactDto>


    <div class="card">
    <h5 class="card-header">Contact Table</h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>         
                    <th>Email</th>
                    <th>Message</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var contact in Model)
                {
                        <tr>
                            <td>@contact.Id</td>
                            <td><strong>@contact.Name</strong></td>
                            <td>@contact.Email</td>
                        <td><p style="font-size:10px;">@contact.Message</p></td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div style="z-index: 10;" class="dropdown-menu">
                                        <a asp-route-id="@contact.Id" asp-action="Delete" class="dropdown-item"><i class="bx bx-trash me-1"></i> Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>
