                <div class="product-box">
                    <a href="#">  <div class="product-image"><img src="./assets/images/5.png" alt="" class="product-img"></div></a>
                    <h2 class="product-title">Rolling Storage Cart with Handle</h2>
                    <div class="asdfg">
                        <span class="product-price">$37</span>
                        <i class='bx bx-shopping-bag add-cart'></i>
                    </div>
                </div>
                <div class="product-box">
                    <a href="#">  <div class="product-image"><img src="./assets/images/6.png" alt="" class="product-img"></div></a>
                    <h2 class="product-title">LED Rechargeable Spotlight</h2>
                    <div class="asdfg">
                        <span class="product-price">$65</span>
                        <i class='bx bx-shopping-bag add-cart'></i>
                    </div>
                </div>
            </div>
        </div>
    </section>
  


    <a href="#" class="scrollup" id="scroll-up">
        <i class="fa-solid fa-arrow-up scrollup__icon"></i>
