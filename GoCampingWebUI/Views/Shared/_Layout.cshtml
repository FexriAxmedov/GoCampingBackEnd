<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GoCamping - @ViewBag.Title</title>
    <script src="https://unpkg.com/scrollreveal"></script>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css" />
    <link rel="stylesheet" href="~/assets/css/style.css">
</head>
<body>
    <header>
        <div class="header-top">
            <div class="headertop-items">
                <h5>Free shipping, 30-day return or refund guarantee.</h5>
                <div class="right">
                    <a asp-area="" asp-controller="Registration" asp-action="Index" class="sign-in">SIGN IN / SIGN UP</a>
                    <a href="#">FAQS</a>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="header-full">
                <div class="logo">
                    <a class="logoo" asp-area="" asp-controller="Home" asp-action="Index">Go<span>Camping.</span></a>
                </div>

                <div class="navs">
                    <ul>
                        <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a href="./shop.html">Shop</a></li>
                        <li class="pages"><a href="#">Pages</a></li>
                        <li><a href="./contact.html">Contact</a></li>
                    </ul>
                </div>

                <div class="dropdown const ">
                    <ul>
                        <li><a asp-area="" asp-controller="Home" asp-action="Aboutus">About Us</a></li>
                        <li><a href="#">Shop Details</a></li>
                        <li><a href="#">Shopping Cart</a></li>
                        <li><a href="#">Check Out</a></li>
                        <li><a href="#">Blog details</a></li>
                    </ul>
                </div>


                <div class="cart-liked">
                    <i class='bx bx-shopping-bag' id="cart-icon"></i>
                </div>
            </div>
        </div>
    </header>

    <div class="cart">
        <h2 class="cart-title">Your Cart</h2>
        <div class="cart-box">
            <img src="~/assets/images/tent.png" alt="" class="cart-img">
            <div class="detail-box">
                <div class="cart-product-title">TENT</div>
                <div class="cart-price">$25.04</div>
            </div>
            <i class='bx bx-trash cart-remove'></i>
        </div>
        <div class="total">
            <div class="total-title">Total</div>
            <div class="total-price">$25.04</div>
        </div>
        <button type="button" class="btn-buy">Buy Now</button>
        <i class='bx bx-x' id="cart-close"></i>

    </div>

   @RenderBody();

    <footer>
        <div class="footercover">
            <div class="footeritems">
                <div class="footertop-items">
                    <div class="birinci">
                        <a class="footerlogo" href="#">
                            Go <span>Camping.</span>
                        </a>
                        <p class="quote">Welcome To Our Campsite <br> where friends and marshmallows get toasted <br>  at the same time</p>
                    </div>
                    <div class="ikinci">
                        <p class="ikincibasliq">SHOPPING</p>
                        <div class="linklerfooter">
                            <a href="#">Camping Gear</a>
                            <a href="#">Trending</a>
                            <a href="#">Accessories</a>
                            <a href="#">Sale</a>
                        </div>
                    </div>

                    <div class="ucuncu">
                        <p class="ikincibasliq">DETAILS</p>
                        <div class="linklerfooter">
                            <a href="#">Contact Us</a>
                            <a href="#">Delivery</a>
                            <a href="#">Blog</a>
                            <a href="#">Return & Exchanges</a>
                        </div>
                    </div>

                    <div class="dorduncu">
                        <p class="ikincibasliq">NEWSLETTER</p>
                        <p class="befirst">Be the first to know about new <br> arrivals, look books, sales & promos!</p>
                        <form action="#">
                            <input class="newsletter" type="text" placeholder="Your Email">
                        </form>
                    </div>
                </div>
                <div class="footerbottom-items"></div>
            </div>

        </div>
        </div>
    </footer>
    <a href="#" class="scrollup" id="scroll-up">
        <i class="fa-solid fa-arrow-up scrollup__icon"></i>
    </a>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.js" integrity="sha512-STof4xm1wgkfm7heWqFJVn58Hm3EtS31XFaagaa8VMReCXAkQnJZ+jEy8PCC/iT18dFy95WcExNHFTqLyp72eQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
<script src="~/assets/js/main.js"></script>
</html>